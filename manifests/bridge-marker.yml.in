apiVersion: apps/v1
kind: DaemonSet
metadata:
  name: bridge-marker
  namespace: ${NAMESPACE}
  labels:
    tier: node
    app: bridge-marker
spec:
  selector:
    matchLabels:
      name: bridge-marker
  updateStrategy:
    type: RollingUpdate
    rollingUpdate:
      maxUnavailable: 10%
  template:
    metadata:
      labels:
        tier: node
        app: bridge-marker
        name: bridge-marker
      annotations:
        description: Bridge marker exposes network bridges available on nodes as node resources
    spec:
      serviceAccountName: bridge-marker
      hostNetwork: true
      nodeSelector:
        kubernetes.io/os: linux
      tolerations:
      - key: node-role.kubernetes.io/master
        operator: Exists
        effect: NoSchedule
      priorityClassName: system-node-critical
      containers:
      - name: bridge-marker
        image: ${BRIDGE_MARKER_IMAGE_REPO}/${BRIDGE_MARKER_IMAGE_NAME}:${BRIDGE_MARKER_IMAGE_VERSION}
        imagePullPolicy: ${BRIDGE_MARKER_IMAGE_PULL_POLICY}
        args:
          - -node-name
          - $(NODE_NAME)
        resources:
          requests:
            cpu: "10m"
            memory: "15Mi"
        env:
          - name: NODE_NAME
            valueFrom:
              fieldRef:
                fieldPath: spec.nodeName
---
kind: ClusterRole
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: bridge-marker-cr
rules:
- apiGroups:
  - ""
  resources:
  - nodes
  - nodes/status
  verbs:
  - get
  - update
  - patch
---
kind: ClusterRoleBinding
apiVersion: rbac.authorization.k8s.io/v1
metadata:
  name: bridge-marker-crb
roleRef:
  apiGroup: rbac.authorization.k8s.io
  kind: ClusterRole
  name: bridge-marker-cr
subjects:
- kind: ServiceAccount
  name: bridge-marker
  namespace: ${NAMESPACE}
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: bridge-marker
  namespace: ${NAMESPACE}
